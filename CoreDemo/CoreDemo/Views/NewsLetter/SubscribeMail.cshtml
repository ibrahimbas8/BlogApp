<div class="tech-btm">
    <p>Bloglarımızdan anında haberdar olun</p>
    <form method="post">
        <input id="subscribeMail" type="email" placeholder="Email" required="" name="Mail">
        <input id="btnSubscribe" type="submit" value="Abone Ol">
    </form>
</div>

<script type="text/javascript">
        $("#btnSubscribe").click(function () {
            let subscribe = {
                Mail: $("#subscribeMail").val()
            };
            $.ajax({
                type: "post",
                url: "/NewsLetter/SubscribeMail/",
                data: subscribe,
                success: function (func) {
                    alert("Bültene Abone Olma Başarılı");
                    let result = jQuery.parseJSON(func);
                }
            });
        });
    </script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>