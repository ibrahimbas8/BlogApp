@model IEnumerable<Entity.Concrete.Comment>

<div class="comment-top">

    @if (Model.Count() == 0)
    {
        <h2>Daha önce yorum yapılmamış.</h2>
        <h2>İlk Yorumu Yapın...</h2>
    }   
    else
    {
        <h4>Yorumlar</h4>
        foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.ComentUserName</h5>
                    <p>@item.ComentContent</p>
                </div>
            </div>
        }
    }
</div>
