@using CoreDemo.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Role Id</label>
        <input value="@Model.Id" type="text" name="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role Adı</label>
        <input value="@Model.name" type="text" name="name" class="form-control" />
    </div>
    <button class="btn btn-warning">Güncelle</button>
</form>